
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/style.css">

    <title>Dashboard</title>
</head>
<body class="m-10">
    <header class="bg-blue-900 w-100 flex justify-between items-center p-5 rounded mb-10">
        <div class="flex container jsb">
          <img class="logo" src="/images/logo.jpg" alt="logo" />
          <div class="flex">
            <a href="/admin/product/new" class="btn btn-ter">Add new item</a>
            <a href="/users/logout" class="btn btn-ter">Logout</a>
          </div>
        </div>
      </header>
      <main>
        <section class="sec-padding flex center">
          <div class="container flex flex-col items-center">
            <h3 class="text-green-700 text-2xl mb-8">Welcome To Admin Dashboard</h3>
            <a href="/admin/product/list" class="btn btn-ter mb-5">List of all Products</a>
            <a href="/admin/product/new" class="btn btn-ter mb-5">Add new Product</a>
            <a href="/admin/product/list/category" class="btn btn-ter">
                List of categories
            </a>
          </div>
        </section>
        <section class="flex">
        <ul class="p-5 m-10">
          <h2 class="text-xl font-medium text-yellow-700">List of Registered Users</h2>
          <% users.forEach(user => { %>
            <li><%= user.fullName %></li>
         <% }) %>
          </ul>
        <ul class="p-5 m-10">
          <h2 class="text-xl font-medium text-yellow-700">List of Products</h2>
          <% products.forEach(product => { %>
            <li><a href="/admin/product/details/<%= product.id  %>"><%= product.name %></a></li>
         <% }) %>
        </ul>
        </section>
      </main>

</body>
</html>