<% include partials/header %>

        <div class="m-5 px-8 py-4 border-2">
            <form action="/articles/<%= article.slug %>" method="POST" class="flex flex-col items-center">
                <input type="text" name="title" placeholder="Add Tittle" class="border-2 p-2 w-full mb-5" value="<%= article.title %>">
                <textarea name="description" placeholder="Add Content" class="border-2 p-2 w-full mb-5" rows="10">
                    <%= article.description %>
                </textarea>
                <input type="text" name="tags" placeholder="Add Tags" class="border-2 p-2 w-full mb-5" value="<%= article.tags %>">
                <button class="bg-green-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Update Article
                </button>
            </form>
    
        </div>
<% include partials/footer %>
