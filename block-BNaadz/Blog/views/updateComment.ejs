<% include partials/header %>
        <div class="text-center">
            <a href="/articles">
                <button class="bg-green-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Back</button>
            </a>
        </div>

     <div class="xl:container flex justify-center items-center h-screen">
        <form action="/comments/<%= comment.id %>" method="POST" class="w-1/3 border-2 p-4 rounded">
            <h2 class="text-center text-blue-400 mb-2">Update Comment</h2>
            <textarea name="content" class="border-2 w-full p-5" rows="6" placeholder="Update Comment">
                <%= comment.content %>
            </textarea>
            <div class="text-center">
                <button class="mt-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Update Comment</button>
            </div>
        </form>
     </div>
<% include partials/footer %>
