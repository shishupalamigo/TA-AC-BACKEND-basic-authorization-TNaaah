<% include partials/header %>

    <section class="p-10 min-h-screen">
        <% articles.forEach(article => { %>
            <div class="m-5 px-4 py-4 border-2"> 
                <h3 class="text-2xl pb-2 text-blue-900"><%= article.title %></h3>

                <p class="pb-2 ">
                    <%= article.description.slice(0, 250)+"...." %>
                </p>
                <a href="/articles/<%= article.slug %>">
                    <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-2 rounded">Read</button>
                </a> 
            </div>
   
        <% }) %>           
    </section>

<% include partials/footer %>